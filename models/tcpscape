KEY_ESCAPE = 0xFF1B

class LineDescriptor:
    def __init__(self, r, g, b, **args):
        self.red = r
        self.green = g
        self.blue = b
        self.attrs = args
    def __getattr__(self, name):
        if name in self.attrs:
            return self.attrs[name]
        elif name == "dash":
            return []
        elif name == "linewidth":
            return 1

